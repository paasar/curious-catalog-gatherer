<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textSize="30sp"
        android:text="Settings"/>

    <TextView
        android:id="@+id/catalog_domain_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textSize="20sp"
        android:text="Catalog domain name"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/catalog_domain_name_input"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="3dp"
        android:maxLines="1"
        android:background="@color/white"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:hint="catalog.example.net"/>

    <TextView
        android:id="@+id/catalog_token_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textSize="20sp"
        android:text="Access token"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/catalog_token_input"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="3dp"
        android:maxLines="1"
        android:background="@color/white"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:hint="asdf0sdfhf032jr90dskfnkj32h492hd"/>

    <TextView
        android:id="@+id/catalog_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textSize="20sp"
        android:text="Username (added automatically)"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/catalog_username_input"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="3dp"
        android:maxLines="1"
        android:background="@color/gray"
        android:textColor="@color/black"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:enabled="false"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <Button
                android:id="@+id/clear_setting_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Clear"/>

            <Button
                android:id="@+id/scan_qr_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan QR code"/>
        </LinearLayout>

        <Button
            android:id="@+id/save_setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Save"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/settings_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:textSize="20sp"/>
</LinearLayout>